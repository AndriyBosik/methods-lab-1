<Page x:Class="ComputerSalonMVVM.Pages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ComputerSalonMVVM.Pages"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePage"
      DataContext="{Binding Main.HomePageViewModel, Source={StaticResource Locator}}">

    <StackPanel
        Orientation="Vertical"
        VerticalAlignment="Center"
        Margin="240,00">

        <Button
            Content="Collect System Block"
            FontSize="30"
            Margin="0,10"
            Command="{Binding ShowCollectSystemBlockPageCommand}" />

        <Button
            Content="View Collected"
            FontSize="30"
            Margin="0,10"
            Command="{Binding ShowCollectedPageCommand}" />

    </StackPanel>
    
</Page>
